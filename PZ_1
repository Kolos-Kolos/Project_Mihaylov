try:
    n = int(input("Введите трехзначное число: "))
    if n < 100 or n > 999:
        print("Ошибка: это не трехзначное число!")
    else:
        a = n // 100
        b = (n // 10) % 10
        c = n % 10
        print("Сумма цифр:, a + b + c")
        print("Произведение цифр:", a * b * c)
except ValueError:
    print("Ошибка: нужно вводить только цифры!")              
